{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --watch . --ext js server.js",
    "test": "jest --coverage --coverageDirectory=coverage/jest",
    "test:watch": "jest --watch --forceExit",
    "test:unit": "jest --testPathPatterns=tests/unit --coverageDirectory=coverage/jest",
    "test:integration": "jest --testPathPatterns=tests/integration --coverageDirectory=coverage/jest",
    "test:e2e": "playwright test ",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write . tests",
    "format:check": "prettier --check . tests",
    "ci": "npm run lint && npm run format:check && npm run test && npm run test:e2e:headed",
    "prepare": "husky install",
    "precommit:husky": "npm run lint && npm run format && npm run format:check",
    "postinstall": "playwright install",
    "clean": "rm -rf node_modules dist coverage",
    "coverage:clean": "rm -rf coverage/*",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --forceExit",
    "test:memory": "node --expose-gc --max-old-space-size=4096 node_modules/jest/bin/jest.js --forceExit --logHeapUsage"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.0",
    "rate-limit-redis": "^4.2.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.0.13",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
